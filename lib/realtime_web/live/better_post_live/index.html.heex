<style>

li.show {
  animation: openspace .3s ease forwards,
  fade-in-animation .3s .3s cubic-bezier(0,.8,.32,1.07) forwards;
  animation-iteration-count: 1;
}

@keyframes openspace {
    to {
        height: auto;
    }
}

@keyframes fade-in-animation {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}
</style>

<%= if length(@queued_posts) > 0 do %>
  <div><a phx-click="refresh_posts">View <%= length(@queued_posts) %> newer posts</a></div>
<% end %>
<ul style="list-style-type: none;">
  <%= for post <- @posts do %>
    <li class="">
      <b style="font-size: 12px;"><%= post.author %></b>
      <p>
        <%= post.content %>

        <span><%= elem(post.location, 2) %>, <%= elem(post.location, 3) %></span>
      </p>
    </li>
  <% end %>
</ul>
